<div class="form-body">
  <div class="row">
    <div class="form-holder">
      <div class="form-content">
        <div class="form-items">
          <h3>Login</h3>
          <%=form_for(resource, as: resource_name, url: sign_in_path) do |form|%>
            <div class="col-md-12">
              <%= form.email_field :email, placeholder: "E-mail Address", class: "form-control",required: true %>
            </div>

            <div class="col-md-12">
              <%= form.password_field :password, class: "form-control", placeholder: "Password", required: true %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= form.check_box :remember_me %>
                <%= form.label :remember_me, style: "color: #F0EDEE;" %>
              </div>
            <% end %>
            <div class="form-button mt-3 actions row">
              <div class = 'col-6'>
                <%= form.submit 'Login', class: "btn btn-primary" %>
              </div>
              <div class = 'col-md-6'>
               <%= link_to 'Sign in', new_user_path, class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
