<%= stylesheet_link_tag 'user' %> 
<div class="form-body">
  <div class="row">
    <div class="form-holder">
      <div class="form-content">
        <div class="form-items">
          <h3>Register new user</h3>
          <%= form_with model: @user, method: :post do |form|%>
            <div class="col-md-12">
              <%= form.text_field :name, class: "form-control", placeholder: "Full Name", required: true%>
            </div>

            <div class="col-md-12">
              <%= form.email_field :email, placeholder: "E-mail Address", class: "form-control",required: true %>
            </div>

            <div class="col-md-12">
              <%= form.password_field :password, class: "form-control", placeholder: "Password", required: true %>
            </div> 

            <div class="form-button mt-3">
              <%= form.submit 'Create new user', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>