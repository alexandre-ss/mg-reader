<style> 
  td {
    color: #F0EDEE;
  }
</style>
<div class="container mt-5 px-2">
  <div class="table-responsive rounded">
    <table class="table table-responsive">
        
      <thead>
        <tr style= "background-color: #F0EDEE;">
          <th scope="col" width="5%">  ID</th> 
          <th scope="col" width="20%">  Name</th>
          <th scope="col" width="10%">  Email</th>
          <th scope="col" width="20%">  Editar</th>
          <th scope="col" width="20%">  Deletar</th>
        </tr>
      </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id%></th>
        <td><%= user.name%></td>
        <td><%= user.email%></td>
        <td><%= link_to "Edit", edit_user_path(user), class: "btn", style: "color: #F0EDEE;" %></td>
        <td><%= link_to 'Delete', user, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn", style: "color: #F0EDEE;" %></td>
      </tr>
    <% end%>
  </tbody>
</table>
  
  </div>
    
</div>