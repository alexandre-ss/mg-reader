<style> 
  td {
    color: #F0EDEE;
  }
</style>
<div class="container mt-5 px-2">
  <div class="table-responsive rounded">
    <table class="table table-responsive">
        
      <thead>
        <tr style= "background-color: #F0EDEE;">
          <th scope="col" width="5%">  ID</th> 
          <th scope="col" width="20%">  Name</th>
          <th scope="col" width="10%">  Email</th>
          <th scope="col" width="20%">  Editar</th>
          <th scope="col" width="20%">  Deletar</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id%></th>
            <td><%= user.name%></td>
            <td><%= user.email%></td>
            <td><a href = "<%=edit_user_path(user)%>" class="fa-solid fa-user-pen" style="color: #ffffff;">
            </a></td>
            <td><a href = "<%= destroy_user_path(user)%>" class="fa-solid fa-trash confirmation" style="color: #ffffff;"></a>
            </td>
          </tr>
        <% end%>
      </tbody>
    </table> 
  </div>  
</div>

<script type="text/javascript">
    var elems = document.getElementsByClassName('confirmation');
    var confirmIt = function (e) {
        if (!confirm('Are you sure?')) e.preventDefault();
    };
    for (var i = 0, l = elems.length; i < l; i++) {
        elems[i].addEventListener('click', confirmIt, false);
    }
</script>

